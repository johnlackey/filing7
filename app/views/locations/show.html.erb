<nav>
  <div class="nav-wrapper">
    <div class="col s12">
      <%= link_to 'Locations', locations_path, {:class=>"breadcrumb"} %>
      <%= link_to @location.LocName, location_path(@location), {:class=>"breadcrumb"} %>
    </div>
  </div>
</nav>
<p id="notice"><%= notice %></p>
<%= form_tag(items_path, method: :get) do %>
  <div class="row xs12 s12">
    <h2 class="col xs6 s6"><%= @location.LocName %></h2>
    <div class="input-field col offset-xs6 xs4 s4">
      <%= text_field_tag :itemSearch, params[:itemSearch] %>
    </div>
    <div class="col xs2 s2">
      <%= submit_tag 'Search' %>
    </div>
  </div>
<% end %>
<table class="striped">
  <thead>
  <tr>
    <th>Item</th>
    <th>Item Name</th>
    <th>Keywords</th>
    <th>Category</th>
    <th>Action_Date</th>
    <th>Status</th>
  </tr>
  </thead>

  <tbody>
  <% @location.items.each do |item| %>
    <tr>
      <td><%= item.NumItemId %></td>
      <td><%= link_to item.ItemName, item_path(item) %></td>
      <td><%= item.Keywords %></td>
      <!--<td><%= item.ItemNote %></td>-->
      <td>
        <% if item.category %>
          <%= item.category.CatName %>
        <% end %>
      </td>
      <td>
        <% if item.ActionDate %>
          <%= item.ActionDate.strftime('%Y-%m-%d') %>
        <% end %>
      </td>
      <td>
        <% if item.status %>
          <%= item.status.name %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<ul class="collapsible popout" data-collapsible="accordion">
</ul>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
