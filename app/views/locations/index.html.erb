<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Note</th>
      <th>Allow Decimals</th>
      <th>Max Count</th>
      <th>Viewable</th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.LocName, location_path(location) %></td>
        <td><%= location.LocNote %></td>
        <td><%= location.AllowDecimals %></td>
        <td><%= location.MaxCapacity %></td>
        <td><%= location.Viewable %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

