<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Note</th>
      <th>Allow Decimals</th>
      <th>Max Count</th>
      <th>Viewable</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.ItemName, item_path(item) %></td>
        <td><%= item.Keywords %></td>
        <td><%= item.ActionDate %></td>
        <td><%= item.ItemNote %></td>
        <td><%= item.Status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

