<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Location</th>
      <th>Item</th>
      <th>Keywords</th>
      <th>Action_Date</th>
      <th>Note</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <% if item.location!=nil %>
              <%= item.location.LocName %>
          <% else %>
              <%= item.LocId %>
          <% end %>
          <%= item.NumItemId %>
        </td>
        <td><%= link_to item.ItemName, item_path(item) %></td>
        <td><%= item.Keywords %></td>
        <td>
          <% if item.ActionDate %>
            <%= item.ActionDate.strftime('%Y-%m-%d') %>
          <% end %>
        </td>
        <td><%= item.ItemNote %></td>
        <td>
          <% if item.status %>
            <%= item.status.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

